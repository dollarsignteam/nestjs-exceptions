{
  "name": "@dollarsign/nestjs-exceptions",
  "version": "1.0.3",
  "description": "NestJS powerful exceptions handler",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "fix": "yarn format && yarn lint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "nestjs",
    "nestjs-exceptions"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dollarsignteam/nestjs-exceptions.git"
  },
  "bugs": "https://github.com/dollarsignteam/nestjs-exceptions/issues",
  "dependencies": {
    "@nestjs/microservices": "^7.4.4",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "lodash": "^4.17.20"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "rxjs": "^6.0.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/testing": "^7.4.4",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.6.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-typescript-sort-keys": "^1.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
